    private void addProductPanels(JPanel panel_DSSP) {
        int y = 20;
        int x = 10;
        int width = 148;
        int height = 193;
        int gap = 20;

        for (int i = 0; i < 10; i++) {  // Adjust the loop to add more product panels
            JPanel productPanel = createProductPanel("Product " + (i + 1), "icon_path", "$" + (i + 1));
            productPanel.setBounds(x, y, width, height);
            panel_DSSP.add(productPanel);

            y += height + gap;
        }

        panel_DSSP.setPreferredSize(new Dimension(527, y));
    }

    private JPanel createProductPanel(String productName, String iconPath, String price) {
        JPanel panel = new JPanel();
        panel.setBackground(new Color(255, 255, 255));
        panel.setBorder(new TitledBorder(new EtchedBorder(EtchedBorder.LOWERED, new Color(255, 255, 255), new Color(160, 160, 160)), productName + " " + price, TitledBorder.LEADING, TitledBorder.TOP, null, new Color(0, 0, 0)));
        panel.setLayout(null);

        JLabel lblProduct = new JLabel("");
        lblProduct.setIcon(new ImageIcon(iconPath));  // Update this path to the actual icon path
        lblProduct.setBounds(10, 22, 128, 128);
        panel.add(lblProduct);

        JSpinner spinner_Product = new JSpinner();
        spinner_Product.setBounds(99, 157, 39, 20);
        panel.add(spinner_Product);

        return panel;
    }

    private void openQuanLySanPhamForm() {
        frmQuanLySanPham qlspForm = new frmQuanLySanPham();
        qlspForm.setVisible(true);
    }
